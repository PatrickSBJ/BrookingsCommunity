@model List<ImportantPerson>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>People Page</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="text-center">
        <h1>Important Brookings Locations</h1>
        @foreach (ImportantPerson person in Model)
        {
            <span>Name: </span>@person.Name<br />
            <span>Achievements: </span>@person.Achievements<br />
            <a href="@person.LinkToInfo">More Information</a>
        }
    </div>
</body>
</html>